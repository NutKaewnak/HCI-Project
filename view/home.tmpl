                    <tr>
                        <th>19:00 - 20:00</td> <td></td> <td></td> <td></td> <td></td> <td></td> <td></td> <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-sm-6">
            <h2>Enrolled Course</h2>
            <!-- Your course table -->
            <div class="your-course-table-group">
                <table class="table" id="registered-table">
                    <tbody ng-repeat="course in registered_section">
                    <tr>
                        <th scope="row">{{course.id}}</th>
                        <td>{{course.name.en}}</td>
                        <td>
                            <button class="btn icon-btn btn-danger" data-toggle="modal" ng-click="drop_course(course)">
                                <span class="text-warning"></span>
                                Drop
                            </button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

