<div ng-controller="appController as app">
    <div class="row">
        <div class="col-sm-3">
            <form class="form-inline">
                <div class="form-group">
                    <label>Course ID</label>
                    <input type="text" class="form-control" ng-model="search" placeholder="EX: 01XXXXXX">
                </div>
                <label id="your-course">Your course</label>
            </form>
            <div class="table-group">
                <table class="table" id="course-table">
                    <tbody ng-repeat="course in courses | filter:search">
                        <tr>
                            <th scope="row">{{course.id}}</th>
                            <td>{{course.name.en}}</td>
                            <td>
                                <!-- Button trigger modal -->
                                <button class="btn icon-btn btn-success"
                                        data-toggle="modal"
                                        ng-click="select_enroll(course)"
                                        data-target=".enroll-modal"
                                        data-backdrop="static"
                                        data-keyboard="false">
                                    <span class="text-success"></span>
                                    Enroll
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="modal fade enroll-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h3 id="course">{{selected_course.id}} - {{selected_course.name.en}}</h3>
                            </div>
                            <div class="modal-body">
                                <ul class="list-group" ng-repeat="section in course_section">
                                    <li class="list-group-item">{{section.id}} - {{section.date}} {{section.type}}
                                        <button class="btn btn-primary"
                                                ng-click="register_section(selected_course)"
                                                aria-label="Close"
                                                data-dismiss="modal">
                                            Register
                                        </button>
                                    </li>
                                </ul>
                            </div>
                            <h4 id="detailEn">{{selected_course.description.en}}</h4>
                            <h4 id="detailTh">{{selected_course.description.th}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-8">
            <div class="table-bordered">
                <table class="table" id="weekly-cal">
                    <thead>
                        <td></td>
                        <th>Sunday</th> <th>Monday</th> <th>Tuesday</th> <th>Wednesday</th> <th>Thursday</th> <th>Friday</th> <th>Saturday</th>
                    </thead>
                    <tr>
